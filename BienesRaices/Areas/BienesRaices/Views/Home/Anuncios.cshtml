@model IEnumerable<BienesRaices.Models.Propiedade>
@{
    ViewData["Title"] = "Anuncios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xl mb-4">
    <h1 class="text-center my-5">Casas en Venta</h1>

    <div class="row">
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-4 mb-3">
                    <div class="card">
                        <img src="@item.ImagenUrl" class="w-100 card-img-top" />
                        <div class="card-body fondo">
                            <h5 class="card-title text-center my-3">@item.Titulo</h5>
                            <p class=" text-center text-card">@item.DescripcionCorta</p>
                            <h2 class="text-warning fw-bold">$@item.Precio.ToString("n")</h2>
                            <div class="dormi align-items-center">
                                <div class=" my-3">
                                    <img src="~/img/icono_wc.svg" />
                                    <h4 class="d-inline text-warning">@item.Bano</h4>
                                </div>
                                <div class=" my-3">
                                    <img src="~/img/icono_estacionamiento.svg" />
                                    <h4 class="d-inline text-warning">@item.Estacionamiento</h4>
                                </div>
                                <div class="my-3">
                                    <img src="~/img/icono_dormitorio.svg" />
                                    <h4 class="d-inline text-warning">@item.Habitaciones</h4>
                                </div>
                            </div>
                            <div class="mt-2">
                                <a asp-area="BienesRaices" asp-controller="Home" asp-action="Detalles" asp-route-Id="@item.Id" class="btn btn-primary w-100">Ver Propiedad</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="text-center text-warning mt-5">
                <h3>No hay Casas en ventas disponibles</h3>
            </div>
        }
        <!--Fin Card Anuncios-->

    </div>
</div>

