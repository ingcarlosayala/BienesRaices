@model IEnumerable<BienesRaices.Models.Propiedade>

@{
    ViewData["Title"] = "Home Page";
}

<header class="img-header">
    <img  src="~/img/header.jpg" class="w-100 imagen-header"/>
</header>

<main class="mb-5 h-100">
    <div class="container">
        <section class="text-center mt-4">
            <h2>Mas Sobre Nosotros</h2>
        </section>

        <!--Iconos-->
        <div class="row justify-content-around align-items-center mt-4 text-center">
            <div class="col-12 col-md-3 mb-3">
                <img src="~/img/icono1.svg" class="w-50" />
                <h3 class="mt-4">Seguridad</h3>
                <p>
                    There are many variations of passages of Lorem Ipsum available,
                    but the majority have suffered alteration in some form
                    ,by injected humour, or randomised words which don't look even slightly
                </p>
            </div>
            <div class="col-12 col-md-3 mb-3">
                <img src="~/img/icono2.svg" class="w-50" />
                <h3 class="mt-4">Precio</h3>
                <p>
                    There are many variations of passages of Lorem Ipsum available,
                    but the majority have suffered alteration in some form
                    ,by injected humour, or randomised words which don't look even slightly
                </p>
            </div>
            <div class="col-12 col-md-3">
                <img src="~/img/icono3.svg" class="w-50" />
                <h3 class="mt-4">A Tiempo</h3>
                <p>
                    There are many variations of passages of Lorem Ipsum available,
                    but the majority have suffered alteration in some form
                    ,by injected humour, or randomised words which don't look even slightly
                </p>
            </div>
        </div>

        <!--Anuncios-->
        <section class="text-center my-3">
            <h2>Casas en Ventas</h2>
        </section>

        <div class="row">
            @if (Model.Count() > 0)
            {
                @foreach (var item in Model)
                {
                <div class="col-12 col-md-4 mb-3">
                    <div class="card">
                        <img src="@item.ImagenUrl" class="w-100 card-img-top" />
                        <div class="card-body fondo">
                            <h5 class="card-title text-center my-3">@item.Titulo</h5>
                            <p class=" text-center text-card">@item.DescripcionCorta</p>
                            <h2 class="text-warning fw-bold">$@item.Precio.ToString("n")</h2>
                            <div class="dormi align-items-center">
                                <div class=" my-3">
                                    <img src="~/img/icono_wc.svg" />
                                    <h4 class="d-inline text-warning">@item.Bano</h4>
                                </div>
                                <div class=" my-3">
                                    <img src="~/img/icono_estacionamiento.svg" />
                                    <h4 class="d-inline text-warning">@item.Estacionamiento</h4>
                                </div>
                                <div class="my-3">
                                    <img src="~/img/icono_dormitorio.svg" />
                                    <h4 class="d-inline text-warning">@item.Habitaciones</h4>
                                </div>
                            </div>
                            <div class="mt-2">
                                <a asp-area="BienesRaices" asp-controller="Home" asp-action="Detalles" asp-route-Id="@item.Id" class="btn btn-primary w-100">Ver Propiedad</a>
                            </div>
                        </div>
                    </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center text-warning mt-5">
                    <h3>No hay Casas en ventas disponibles</h3>
                </div>
            }
            <!--Fin Card Anuncios-->

        </div>
        <div class="text-end">
            <a asp-area="BienesRaices" asp-controller="Home" asp-action="Anuncios" class="btn btn-success">Ver Todas</a>
        </div>
    </div>

    <!--Encuenta la Casa-->
    <section class="mt-3 encuentra encuenta-casa">
        <article class="container text-center">
            <h2 class="text-white fw-bold mb-3">Encuentra la casa de tus sueños</h2>
            <p class="text-white mb-3">Llena el formulario de contacto y un asesor se pondrá en contacto contigo a la brevedad</p>
            <a asp-area="BienesRaices" asp-controller="Contactos" asp-action="Index" class="btn btn-warning text-center">Contactanos</a>
       </article>
    </section>

    <!--Blog-->
    <section class="container">
        <div class="row mt-5">
            <div class="col-12 col-md-8 mb-4">
                <h2>Nuestro Blog</h2>
                <div class="row">
                    <div class="col-12 col-md-6 mb-3">
                        <img src="~/img/blog1.jpg" class="w-100" />
                    </div>
                    <div class="col-12 col-md-6">
                        <h4>Terraza en el techo de tu casa</h4>
                        <h5>Escrito el: <span class="text-warning fw-bold">22/11/2022</span></h5>
                        <p>Consejos para construir una terraza en el techo de tu casa con los mejores materiales y ahorrando dinero</p>
                    </div>
                </div>
            </div>
            <div class="col-12 col-md-4 text-center">
                <h2>Testimoniales</h2>
                <div class="card rounded-5">
                    <div class="card-body text-center lin">
                        <figure class="text-center testimoniales">
                            <blockquote class="blockquote">
                                <p class="mb-0 ">El personal de conporto de una exelente forma,muy buena atencion y la casa que me ofrecieron cumple con todas mis expectativas.</p>

                            </blockquote>
                            <figcaption class="blockquote-footer text-end">
                                Ing.Carlos Ayala
                            </figcaption>
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>