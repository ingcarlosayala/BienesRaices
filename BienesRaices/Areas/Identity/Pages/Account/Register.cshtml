@page
@using BienesRaices.Utilidades;
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<h1 class="text-center my-3">@ViewData["Title"]</h1>

<div class="row ">
    <div class="col-md-4 container-xl shadow p-3">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2 class="text-center text-muted">Crear Nueva Cuenta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            @if (User.IsInRole(DS.Admin))
            {
                <div class="form-floating mb-3">
                    <input type="radio" name="radioUruario" value="@DS.Admin" />@DS.Admin
                    <input type="radio" name="radioUruario" value="@DS.Cliente" />@DS.Cliente
                </div>
            }
            <button id="registerSubmit" type="submit" class="w-100 btn btn-primary">Registrarse</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
